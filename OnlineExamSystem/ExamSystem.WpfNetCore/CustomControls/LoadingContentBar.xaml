<UserControl x:Class="ExamSystem.WpfNetCore.CustomControls.LoadingContentBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamSystem.WpfNetCore.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" Width="50"
             >
    <Grid RenderTransformOrigin="0.5,0.5">

        <ProgressBar x:Name="ProgressBar" Grid.Row="0" 
                Style="{StaticResource MaterialDesignCircularProgressBar}" 
                       Foreground="SteelBlue"  Value="0" 
                         IsIndeterminate="True" Width="50" 
                     Height="50"/>



    </Grid>
</UserControl>
