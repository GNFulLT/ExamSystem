<UserControl x:Class="ExamSystem.MVVM.View.EducatorView.QuestionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign ="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ExamSystem.MVVM.View.EducatorView"
             xmlns:educatorViewModel="clr-namespace:ExamSystem.MVVM.ViewModel.EducatorViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="1000"
             >
    <UserControl.DataContext>
        <educatorViewModel:QuestionPanelViewModel>
            
        </educatorViewModel:QuestionPanelViewModel>
    </UserControl.DataContext>
    <Button materialDesign:ButtonAssist.CornerRadius="10"  Style="{StaticResource MaterialDesignRaisedDarkButton}" Background="#bebebe" Margin="-2.018,-2.018,2.018,2.018" BorderBrush="#FF020101">
    <Grid Width="991" Height="30" Background="Transparent">
            <Label Content="{Binding UnitText}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,-1,0,0"/>
        </Grid>
    </Button>
</UserControl>
